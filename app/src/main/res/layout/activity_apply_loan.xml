<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".Apply_Loan"
    android:scrollbarAlwaysDrawVerticalTrack="true">


                <TextView
                    android:id="@+id/MemberDetails"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="0dp"
                    android:text="MEMBER LOAN APPLICATION DETAILS "
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mFullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Full Name "
                    android:layout_below="@+id/MemberDetails" />

    <EditText
        android:id="@+id/FullName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:drawablePadding="0dp"
        android:hint="Full Name"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="14sp"
       android:inputType="textPersonName"/>

    <TextView
        android:id="@+id/mAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:labelFor="@+id/Address"
        android:text="address" />

    <EditText
        android:id="@+id/Address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:drawablePadding="0dp"
        android:hint="Address"
        android:inputType="textPhonetic"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/mContribution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:labelFor="@+id/TypeOfMember"
        android:text="No of Contributions Made in Months?" />

    <EditText
        android:id="@+id/Contribution"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:drawablePadding="0dp"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="10sp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Eg 2 or 3" />

    <TextView
        android:id="@+id/mBank_branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:labelFor="@+id/Bank_branch"
        android:text="bank_branch_name" />

    <EditText
        android:id="@+id/Bank_branch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:drawablePadding="0dp"
        android:hint="Bank_branch_name"
        android:inputType="text"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/mBank_account_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:labelFor="@+id/bank_account_number"
        android:text="bank account number" />

    <EditText
        android:id="@+id/bank_account_number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:drawablePadding="0dp"
        android:inputType="textPhonetic"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/mTypeOfLoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:labelFor="@+id/TypeOfLoan"
        android:text="type of loan" />

    <EditText
        android:id="@+id/TypeOfLoan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:drawablePadding="0dp"
        android:hint="TypeOfLoan"
        android:inputType="text"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/mType_of_loan_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:labelFor="@+id/type_of_loan_amount"
        android:text="type of loan amount" />

    <EditText
        android:id="@+id/type_of_loan_amount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:drawablePadding="0dp"
        android:inputType="textPhonetic"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/mLoan_interest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:labelFor="@+id/loan_interest"
        android:text="Type Of Loan Interest Percentage" />

    <EditText
        android:id="@+id/loan_interest"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:drawablePadding="10dp"
        android:inputType="textPhonetic"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/mRepayment_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:labelFor="@+id/repayment_period"
        android:text="Repayment Period in Months" />

    <EditText
        android:id="@+id/repayment_period"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:drawablePadding="10dp"
        android:inputType="textPhonetic"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/mGuarantors_Full_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:labelFor="@+id/guarantors_Full_Name"
        android:text="Guarantors Full Name " />

    <EditText
        android:id="@+id/guarantors_Full_Name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:drawablePadding="10dp"
        android:hint="Guarantors Full Name"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/mGuarantors_Phone_Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:labelFor="@+id/guarantors_phone_number"
        android:text="Guarantors Phone Number" />

    <EditText
        android:id="@+id/guarantors_phone_number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:drawablePadding="10dp"
        android:inputType="textPhonetic"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="10sp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/applyBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="#808000"
            android:text="APPLY AND PRINT"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="16sp" />

    <Button
        android:id="@+id/clearBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ED2939"
        android:layout_centerHorizontal="true"
        android:text="CLEAR"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="16sp" />




    </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>






</LinearLayout>

